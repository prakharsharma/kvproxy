CXXSRC = \
         MsgDriver.cpp \

WARN += -Wall

LINC = \
	-I./ \
	-I/usr/local/include \
	-I/home/y/include \
	`pkg-config --cflags glib-2.0`

LLDLIBS = \
    	-L/usr/local/lib -Wl,-rpath,/usr/local/lib \
        -L/home/y/lib -Wl,-rpath,/home/y/lib \
        `pkg-config --libs glib-2.0 | sed 's/-liconv//'` \
        -L$(PROTO_UTILS) -Wl,-rpath,$(PROTO_UTILS) \
        -lkvproxy_proto \

