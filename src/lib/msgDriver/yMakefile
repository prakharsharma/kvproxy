export PKG_CONFIG_PATH=/home/y/lib/pkgconfig
export BASE_DIR=$(shell pwd)/..
export PROTO_UTILS=$(BASE_DIR)/proto
export WORKER_UTILS=$(BASE_DIR)/worker
